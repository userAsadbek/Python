for _ in range(3):
 print("#")

def main():
    print_column(3)
    print_row(4)
    print_square(3)
def print_column(n):
    for _ in range(n):
        print("#")
def print_row(n):
    print("?"*n)
def print_square(n):
    #For each row in square
    for i in range(n):
     #For each brick in row
        for j in range(n):
         #Print brick
            print("#",end="")
        print()
main()
