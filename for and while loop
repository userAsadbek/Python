#Loops
i=1
#While loop
while(i<=3):
    print("meow")
    i+=1
#For loop
for i in range(3): #ranging till;
    print("meow")

for _ in range(3): #it is neccesarry for use now like i
    print("meow")

print("meow\n"*3) #new line and 3 meow repetition

#While
while True:
    n=int(input("enter a number"))
    if n<0:
       continue
    else:
        break

for _ in range(n):
    print("meow")

def main():
     meow(3)
def meow(n):
    for _ in range(n):
         print("meow")
